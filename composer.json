{
  "name": "mrgrain/autobahn",
  "description": "Autobahn is the Ueberholspur for your Composer-based WordPress stack. German Engineering.",
  "license": "GPL-3.0+",
  "keywords": ["wordpress", "stack", "composer", "wp", "boilerplate"],
  "type": "project",
  "authors": [
    {
      "name": "Moritz Kornher",
      "email": "mail@moritzkornher.de"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "^1.0.0",
    "johnpbloch/wordpress": "^4.4.0",
    "mrgrain/autobahn-config": "^1.0.0"
  },
  "extra": {
    "installer-paths": {
      "public/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "public/wp"
  },
  "require-dev": {
    "wp-cli/wp-cli": "~0.20"
  }
}
